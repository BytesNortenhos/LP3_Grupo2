<BorderPane fx:id="parent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.athletes.SportTeamRegisterController">
    <top>
        <HBox styleClass="navBar" prefHeight="40.0" prefWidth="400.0">
            <Button styleClass="iconHomeNav" onAction="#returnHomeMenu">
                <graphic>
                    <ImageView fx:id="iconHomeNav" fitWidth="55" fitHeight="55" preserveRatio="true" />
                </graphic>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
            <SplitMenuButton fx:id="sportSplitButton" styleClass="dropdownButton" text="Modalidade">
                <items>
                    <MenuItem text="Inscrição Individual" onAction="#mostrarRegistaModalidades"/>
                    <MenuItem text="Inscrição Equipa" onAction="#mostrarRegistaModalidadesEquipa"/>
                    <MenuItem text="Visualizar modalidades" onAction="#mostrarRegistaModalidades"/>
                </items>
            </SplitMenuButton>
            <SplitMenuButton fx:id="theamsSplitButton" styleClass="dropdownButton" text="Equipas">
                <items>
                    <!-- ><MenuItem text="Inscrição Equipa" onAction="#mostrarRegistaModalidadesEquipa"/> -->
                    <MenuItem text="Visualizar equipas" onAction="#mostrarRegistaModalidades"/>
                </items>
            </SplitMenuButton>
            <Button mnemonicParsing="false" onAction="#changeMode" styleClass="iconMoonNav">
                <graphic>
                    <ImageView fx:id="iconModeNav" fitWidth="55" fitHeight="55" preserveRatio="true" />
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#logout" styleClass="iconLogoutNav">
                <graphic>
                    <ImageView fx:id="iconLogoutNav" fitWidth="55" fitHeight="55" preserveRatio="true" />
                </graphic>
            </Button>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER">
            <Label styleClass="loginText" style="-fx-font-size: 60px" text="INSCRIÇÃO EM MODALIDADES DE EQUIPA" />
            <Label styleClass="descriptionText" translateY="-50" text="Nesta área poderá inscrever-se na modaliade desejada!" />
            <Label styleClass="descriptionText" translateY="-40" text="Após o registo deverá aguardar a aprovação por parte do gestor do comité olímpico." />
            <ComboBox fx:id="eventsDrop" styleClass="registerDropBig"  translateY="-20" promptText="Escolha a o evento" />
            <ComboBox fx:id="sportsDrop" styleClass="registerDropBig"  translateY="-20" promptText="Escolha a modalidade" />
            <ComboBox fx:id="teamsDrop" styleClass="registerDropBig" translateY="-5" promptText="Escolha a equipa" />
            <Button styleClass="buttonEntrar" onAction="#registerSport" style="-fx-translate-y: 10px;">Registar</Button>
        </VBox>
    </center>
</BorderPane>
