<BorderPane fx:id="parent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.athletes.HomeControllerAthlete">
    <top>
        <HBox styleClass="navBar" prefHeight="40.0" prefWidth="400.0">
            <Button styleClass="iconHomeNav">
                <graphic>
                    <ImageView fx:id="iconHomeNav" fitWidth="55" fitHeight="55" preserveRatio="true"/>
                </graphic>
            </Button>
            <Pane HBox.hgrow="ALWAYS"/>
            <SplitMenuButton fx:id="sportSplitButton" styleClass="dropdownButton" text="Modalidade">
                <items>
                    <MenuItem text="Inscrição Individual" onAction="#mostrarRegistaModalidades"/>
                    <MenuItem text="Inscrição Equipa" onAction="#mostrarRegistaModalidadesEquipa"/>
                    <!--          <MenuItem text="Visualizar modalidades" onAction="#mostrarModalidades"/>-->
                </items>
            </SplitMenuButton>
            <SplitMenuButton fx:id="theamsSplitButton" styleClass="dropdownButton" text="Equipas">
                <items>
                    <MenuItem text="Inscrição" onAction="#mostrarRegistaEquipas"/>
                    <!--          <MenuItem text="Visualizar equipas" onAction="#mostrarRegistaModalidades"/>-->
                </items>
            </SplitMenuButton>
            <Button mnemonicParsing="false" onAction="#changeMode" styleClass="iconMoonNav">
                <graphic>
                    <ImageView fx:id="iconModeNav" fitWidth="55" fitHeight="55" preserveRatio="true"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#logout" styleClass="iconLogoutNav">
                <graphic>
                    <ImageView fx:id="iconLogoutNav" fitWidth="55" fitHeight="55" preserveRatio="true"/>
                </graphic>
            </Button>
        </HBox>
    </top>
    <center>
        <VBox>
            <Label styleClass="labelHome">Inicio</Label>
            <Label fx:id="textWelcome" styleClass="textWelcome"/>
            <VBox fx:id="mainContainerAthlete">
                <Label fx:id="goldMedals" styleClass="textMedals"/>
                <Label fx:id="silverMedals" styleClass="textMedals"/>
                <Label fx:id="bronzeMedals" styleClass="textMedals"/>
                <Label fx:id="certificate" styleClass="textMedals"/>
<!--                <Label fx:id="olympicRecord" styleClass="textMedals"/>-->
            </VBox>
        </VBox>
    </center>
</BorderPane>