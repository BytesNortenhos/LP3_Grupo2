<BorderPane fx:id="parent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.admin.RegisterSportController">
        <top>
        <fx:include source="menu.fxml" fx:id="menubar" />
    </top>
    <center>
        <VBox alignment="CENTER">
            <Label styleClass="loginText" text="REGISTAR MODALIDADES" />
            <ImageView fx:id="iconSports" styleClass="iconOlympic" fitWidth="72" fitHeight="72" preserveRatio="true" />
            <TextField styleClass="userNameText" style="-fx-translate-y: -100px;" fx:id="nameText"  promptText="Nome da modalidade" />
            <HBox style="-fx-translate-y: -80px; -fx-max-width: 350px">
            <TextField styleClass="userNameText" style="-fx-translate-y: 0; -fx-min-width: 170px; -fx-max-width: 170px;" fx:id="descText" promptText="Descrição da modalidade" />
                <ComboBox fx:id="typeDrop" styleClass="registerDrop" promptText="Tipo" style="-fx-translate-x: 10px">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Individual" />
                            <String fx:value="Collective" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <HBox style="-fx-translate-y: -60px; -fx-max-width: 350px">
                <ComboBox fx:id="genderDrop" styleClass="registerDrop" promptText="Género" />
                <ComboBox fx:id="localDrop" styleClass="registerDrop" promptText="Local" style="-fx-translate-x: 10px"/>
            </HBox>
            <HBox style="-fx-translate-y: -40px; -fx-max-width: 350px;">
            <TextField styleClass="registerTextSmall" fx:id="scoreMinText"  promptText="Resultado mínimo" />
                <TextField styleClass="registerTextSmall" fx:id="scoreMaxText"  promptText="Resultado máximo" style="-fx-translate-x: 10px"/>
            </HBox>
            <HBox style="-fx-translate-y: -20px; -fx-max-width: 350px;">
                <TextField styleClass="registerTextSmall" fx:id="minText"  promptText="Minímo de participantes" />
                <ComboBox fx:id="oneGameDrop" styleClass="registerDrop"  promptText="Número de jogos" style="-fx-translate-x: 10px">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="One" />
                            <String fx:value="Multiple" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <HBox style="-fx-translate-y: 0px; -fx-max-width: 350px;">
                <ComboBox fx:id="scoringDrop" styleClass="registerDrop" onAction="#getMetricDrop" promptText="Tipo de pontos">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Points" />
                            <String fx:value="Time" />
                            <String fx:value="Distance" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <ComboBox fx:id="metricDrop" styleClass="registerDrop"  promptText="Métrica" style="-fx-translate-x: 10px">
                    <items>
                    </items>
                </ComboBox>
            </HBox>
            <HBox style="-fx-translate-y: 20px; -fx-max-width: 350px;">
                <DatePicker fx:id="startDataPicker" styleClass="dataPicker"  promptText="Data de início">
                </DatePicker>
                <DatePicker fx:id="endDataPicker" styleClass="dataPicker"  promptText="Data de fim" style="-fx-translate-x: 10px">
                </DatePicker>
            </HBox>
            <HBox style="-fx-translate-y: 30px; -fx-max-width: 350px;">
                <VBox>
                    <Label styleClass="textSmall" text="Hora de início:"/>
                    <HBox>
                        <Spinner fx:id="startHourSpinner" styleClass="spinner" prefWidth="80"/>
                        <Spinner fx:id="startMinuteSpinner" styleClass="spinner" prefWidth="80" translateX="10"/>
                    </HBox>
                </VBox>
                <VBox>
                    <Label styleClass="textSmall" text="Hora de fim:" translateX="20"/>
                    <HBox>
                        <Spinner fx:id="endHourSpinner" styleClass="spinner" prefWidth="80" translateX="20"/>
                        <Spinner fx:id="endMinuteSpinner" styleClass="spinner" prefWidth="80" translateX="30"/>
                    </HBox>
                </VBox>
            </HBox>
            <TextField fx:id="rulesTextArea" styleClass="userNameText" promptText="Insira as regras da modalidade" style="-fx-translate-y: 50px;"/>

            <HBox style="-fx-translate-y: 60px; -fx-max-width: 350px;" >
                <Button styleClass="buttonEntrar" onAction="#addRule">Adicionar Regra</Button>
                <Button styleClass="buttonEntrar"  onAction="#registerSport" translateX="35">Registar</Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
