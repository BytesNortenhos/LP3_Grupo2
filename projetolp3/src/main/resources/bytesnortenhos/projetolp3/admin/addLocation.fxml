<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="parent" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" styleClass="background"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.admin.LocationAddController">
    <top>
        <fx:include source="menu.fxml" fx:id="menubar" />
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label styleClass="loginText" text="ADICIONAR LOCAL" />
            <TextField fx:id="nameTextField" styleClass="userNameText" promptText="Nome do Local" />
            <TextField fx:id="addressTextField" styleClass="userNameText" promptText="Endereço" />
            <TextField fx:id="cityTextField" styleClass="userNameText" promptText="Cidade" />
            <TextField fx:id="capacityTextField" styleClass="userNameText"  promptText="Capacidade" />
            <TextField fx:id="constructionYearTextField" styleClass="userNameText" promptText="Ano de Construção" />
            <ComboBox fx:id="typeComboBox" styleClass="registerDropBig" promptText="Tipo do Local" />
            <ComboBox fx:id="eventComboBox" styleClass="registerDropBig" promptText="Escolha o Evento" />
            <Button styleClass="buttonEntrar" text="Adicionar Local" onAction="#handleAddLocal" />
        </VBox>
    </center>
</BorderPane>
